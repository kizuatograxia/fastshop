generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 7.1 USERS TABLE
model User {
  id              String    @id @default(uuid())
  email           String    @unique
  passwordHash    String?   @map("password_hash")
  firstName       String?   @map("first_name")
  lastName        String?   @map("last_name")
  avatarUrl       String?   @map("avatar_url")
  bio             String?   @db.Text
  dateOfBirth     DateTime? @map("date_of_birth") @db.Date
  country         String?
  role            Role      @default(USER)
  status          UserStatus @default(PENDING)
  emailVerified   Boolean   @default(false) @map("email_verified")
  lastLoginAt     DateTime? @map("last_login_at")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @default(now()) @updatedAt @map("updated_at")

  orders          Order[]
  library         UserBook[]
  wishlist        Wishlist[]
  reviews         Review[]
  notifications   Notification[]
  preferences     NotificationPreference?
  readingSessions ReadingSession[]

  @@map("users")
}

// 7.2 BOOKS TABLE
model Book {
  id              String    @id @default(uuid())
  title           String    @db.VarChar(500)
  slug            String    @unique @db.VarChar(500)
  subtitle        String?   @db.VarChar(500)
  isbn            String?   @db.VarChar(20)
  asin            String?   @db.VarChar(20)
  description     String?   @db.Text
  shortDescription String?  @map("short_description") @db.VarChar(500)
  coverImageUrl   String?   @map("cover_image_url") @db.VarChar(500)
  releaseDate     DateTime? @map("release_date") @db.Date
  language        String    @default("en") @db.VarChar(10)
  pageCount       Int?      @map("page_count")
  durationMinutes Int?      @map("duration_minutes")
  narrator        String?   @db.VarChar(255)
  
  // Pricing
  price           Decimal   @db.Decimal(10, 2)
  salePrice       Decimal?  @map("sale_price") @db.Decimal(10, 2)
  saleStartDate   DateTime? @map("sale_start_date") @db.Date
  saleEndDate     DateTime? @map("sale_end_date") @db.Date
  currency        String    @default("USD") @db.VarChar(3)

  // Formats
  hasEbook        Boolean   @default(false) @map("has_ebook")
  hasAudiobook    Boolean   @default(false) @map("has_audiobook")
  ebookFileUrl    String?   @map("ebook_file_url") @db.VarChar(500)
  audiobookFileUrl String?  @map("audiobook_file_url") @db.VarChar(500)
  sampleFileUrl   String?   @map("sample_file_url") @db.VarChar(500)

  // Inventory
  stockStatus     StockStatus @default(UNLIMITED) @map("stock_status")
  stockQuantity   Int         @default(0) @map("stock_quantity")

  // Status & SEO
  status          BookStatus @default(DRAFT)
  isFeatured      Boolean    @default(false) @map("is_featured")
  metaTitle       String?    @map("meta_title") @db.VarChar(500)
  metaDescription String?    @map("meta_description") @db.Text

  // Stats
  totalSales      Int        @default(0) @map("total_sales")
  totalRevenue    Decimal    @default(0) @map("total_revenue") @db.Decimal(15, 2)
  averageRating   Decimal?   @map("average_rating") @db.Decimal(3, 2)
  reviewCount     Int        @default(0) @map("review_count")

  createdAt       DateTime   @default(now()) @map("created_at")
  updatedAt       DateTime   @default(now()) @updatedAt @map("updated_at")

  // Relations
  authorId        String?    @map("author_id")
  author          Author?    @relation(fields: [authorId], references: [id])
  publisherId     String?    @map("publisher_id")
  publisher       Publisher? @relation(fields: [publisherId], references: [id])
  primaryGenreId  String?    @map("primary_genre_id")
  primaryGenre    Genre?     @relation(fields: [primaryGenreId], references: [id])
  
  orderItems      OrderItem[]
  inUserLibraries UserBook[]
  inWishlists     Wishlist[]
  reviews         Review[]
  readingSessions ReadingSession[]

  @@map("books")
}

// 7.3 AUTHORS TABLE
model Author {
  id           String   @id @default(uuid())
  name         String   @db.VarChar(255)
  slug         String   @unique @db.VarChar(255)
  photoUrl     String?  @map("photo_url") @db.VarChar(500)
  bio          String?  @db.Text
  website      String?  @db.VarChar(500)
  twitter      String?  @map("twitter_handle") @db.VarChar(100)
  facebook     String?  @map("facebook_url") @db.VarChar(500)
  instagram    String?  @map("instagram_handle") @db.VarChar(100)
  linkedin     String?  @map("linkedin_url") @db.VarChar(500)
  isFeatured   Boolean  @default(false) @map("is_featured")
  createdAt    DateTime @default(now()) @map("created_at")

  books        Book[]

  @@map("authors")
}

// 7.4 PUBLISHERS TABLE
model Publisher {
  id           String   @id @default(uuid())
  name         String   @db.VarChar(255)
  slug         String   @unique @db.VarChar(255)
  logoUrl      String?  @map("logo_url") @db.VarChar(500)
  description  String?  @db.Text
  website      String?  @db.VarChar(500)
  contactEmail String?  @map("contact_email") @db.VarChar(255)
  address      String?  @db.Text
  createdAt    DateTime @default(now()) @map("created_at")

  books        Book[]

  @@map("publishers")
}

// 7.5 GENRES TABLE
model Genre {
  id           String   @id @default(uuid())
  name         String   @db.VarChar(100)
  slug         String   @unique @db.VarChar(100)
  description  String?  @db.Text
  displayOrder Int      @default(0) @map("display_order")

  parentId     String?  @map("parent_id")
  parent       Genre?   @relation("GenreHierarchy", fields: [parentId], references: [id])
  children     Genre[]  @relation("GenreHierarchy")

  books        Book[]

  @@map("genres")
}

// 7.6 ORDERS TABLE
model Order {
  id            String      @id @default(uuid())
  orderNumber   String      @unique @map("order_number") @db.VarChar(50)
  guestEmail    String?     @map("guest_email") @db.VarChar(255)
  status        OrderStatus @default(PENDING)
  
  // Payment
  paymentMethod String?     @map("payment_method") @db.VarChar(50)
  paymentId     String?     @map("payment_id") @db.VarChar(255)
  subtotal      Decimal     @db.Decimal(10, 2)
  discountAmount Decimal    @default(0) @map("discount_amount") @db.Decimal(10, 2)
  taxAmount     Decimal     @default(0) @map("tax_amount") @db.Decimal(10, 2)
  totalAmount   Decimal     @map("total_amount") @db.Decimal(10, 2)
  currency      String      @default("USD") @db.VarChar(3)

  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @default(now()) @updatedAt @map("updated_at")
  completedAt   DateTime?   @map("completed_at")

  userId        String?     @map("user_id")
  user          User?       @relation(fields: [userId], references: [id])
  couponId      String?     @map("coupon_id")
  coupon        Coupon?     @relation(fields: [couponId], references: [id])
  items         OrderItem[]

  @@map("orders")
}

// 7.7 ORDER_ITEMS TABLE
model OrderItem {
  id        String  @id @default(uuid())
  price     Decimal @db.Decimal(10, 2)
  currency  String  @default("USD") @db.VarChar(3)

  orderId   String? @map("order_id")
  order     Order?  @relation(fields: [orderId], references: [id])
  bookId    String? @map("book_id")
  book      Book?   @relation(fields: [bookId], references: [id])

  @@map("order_items")
}

// 7.8 USER_BOOKS TABLE (Library)
model UserBook {
  id              String    @id @default(uuid())
  purchaseDate    DateTime  @default(now()) @map("purchase_date")
  purchasePrice   Decimal?  @map("purchase_price") @db.Decimal(10, 2)
  
  readingProgress Int       @default(0) @map("reading_progress")
  currentChapter  Int?      @map("current_chapter")
  lastReadAt      DateTime? @map("last_read_at")
  isFinished      Boolean   @default(false) @map("is_finished")
  isArchived      Boolean   @default(false) @map("is_archived")

  userId          String?   @map("user_id")
  user            User?     @relation(fields: [userId], references: [id])
  bookId          String?   @map("book_id")
  book            Book?     @relation(fields: [bookId], references: [id])

  @@map("user_books")
}

// 7.9 WISHLIST TABLE
model Wishlist {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now()) @map("created_at")

  userId    String?  @map("user_id")
  user      User?    @relation(fields: [userId], references: [id])
  bookId    String?  @map("book_id")
  book      Book?    @relation(fields: [bookId], references: [id])

  @@unique([userId, bookId])
  @@map("wishlist")
}

// 7.10 REVIEWS TABLE
model Review {
  id              String       @id @default(uuid())
  rating          Int
  title           String?      @db.VarChar(255)
  comment         String?      @db.Text
  status          ReviewStatus @default(PENDING)
  helpfulCount    Int          @default(0) @map("helpful_count")
  notHelpfulCount Int          @default(0) @map("not_helpful_count")
  createdAt       DateTime     @default(now()) @map("created_at")
  updatedAt       DateTime     @default(now()) @updatedAt @map("updated_at")

  userId          String?      @map("user_id")
  user            User?        @relation(fields: [userId], references: [id])
  bookId          String?      @map("book_id")
  book            Book?        @relation(fields: [bookId], references: [id])

  @@map("reviews")
}

// 7.11 COUPONS TABLE
model Coupon {
  id              String       @id @default(uuid())
  code            String       @unique @db.VarChar(50)
  discountType    DiscountType @map("discount_type")
  discountValue   Decimal      @map("discount_value") @db.Decimal(10, 2)
  minPurchase     Decimal?     @default(0) @map("min_purchase") @db.Decimal(10, 2)
  usageLimitPerCoupon Int?     @map("usage_limit_per_coupon")
  usageLimitPerUser   Int?     @default(1) @map("usage_limit_per_user")
  usageCount      Int          @default(0) @map("usage_count")
  validFrom       DateTime?    @map("valid_from")
  validUntil      DateTime?    @map("valid_until")
  applicableTo    ApplicableTo @default(ALL) @map("applicable_to")
  applicableBookIds String[]   @map("applicable_book_ids")
  status          CouponStatus @default(ACTIVE)
  createdAt       DateTime     @default(now()) @map("created_at")

  orders          Order[]

  @@map("coupons")
}

// 7.12 NOTIFICATIONS TABLE
model Notification {
  id        String   @id @default(uuid())
  type      String   @db.VarChar(50)
  title     String   @db.VarChar(255)
  message   String   @db.Text
  actionUrl String?  @map("action_url") @db.VarChar(500)
  isRead    Boolean  @default(false) @map("is_read")
  createdAt DateTime @default(now()) @map("created_at")

  userId    String?  @map("user_id")
  user      User?    @relation(fields: [userId], references: [id])

  @@map("notifications")
}

// 7.13 NOTIFICATION_PREFERENCES TABLE
model NotificationPreference {
  id                      String   @id @default(uuid())
  emailOrderConfirmations Boolean  @default(true) @map("email_order_confirmations")
  emailPasswordResets     Boolean  @default(true) @map("email_password_resets")
  emailSecurityAlerts     Boolean  @default(true) @map("email_security_alerts")
  emailNewReleases        Boolean  @default(false) @map("email_new_releases")
  emailPriceDrops         Boolean  @default(false) @map("email_price_drops")
  emailWeeklyDigest       Boolean  @default(false) @map("email_weekly_digest")
  emailNewsletter         Boolean  @default(false) @map("email_newsletter")
  pushNewReleases         Boolean  @default(true) @map("push_new_releases")
  pushPriceDrops          Boolean  @default(true) @map("push_price_drops")
  pushReadingReminders    Boolean  @default(false) @map("push_reading_reminders")
  pushOrderUpdates        Boolean  @default(true) @map("push_order_updates")
  updatedAt               DateTime @default(now()) @updatedAt @map("updated_at")

  userId                  String   @unique @map("user_id")
  user                    User     @relation(fields: [userId], references: [id])

  @@map("notification_preferences")
}

// 7.14 READING_SESSIONS TABLE
model ReadingSession {
  id              String    @id @default(uuid())
  startedAt       DateTime  @default(now()) @map("started_at")
  endedAt         DateTime? @map("ended_at")
  pagesRead       Int?      @map("pages_read")
  durationSeconds Int?      @map("duration_seconds")
  deviceType      String?   @map("device_type") @db.VarChar(50)
  deviceInfo      String?   @map("device_info") @db.Text

  userId          String?   @map("user_id")
  user            User?     @relation(fields: [userId], references: [id])
  bookId          String?   @map("book_id")
  book            Book?     @relation(fields: [bookId], references: [id])

  @@map("reading_sessions")
}

// ENUMS

enum Role {
  USER
  AUTHOR
  ADMIN
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  PENDING
}

enum StockStatus {
  UNLIMITED
  LIMITED
  OUT_OF_STOCK
}

enum BookStatus {
  PUBLISHED
  DRAFT
  ARCHIVED
}

enum OrderStatus {
  PENDING
  COMPLETED
  REFUNDED
  FAILED
}

enum ReviewStatus {
  PENDING
  APPROVED
  FLAGGED
}

enum DiscountType {
  PERCENTAGE
  FIXED
}

enum ApplicableTo {
  ALL
  SELECTED
  CATEGORIES
}

enum CouponStatus {
  ACTIVE
  INACTIVE
  EXPIRED
}
